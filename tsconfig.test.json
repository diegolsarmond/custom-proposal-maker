{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "outDir": "dist-tests",
    "noEmit": false,
    "types": ["node"],
    "moduleResolution": "bundler",
    "module": "ESNext",
    "allowImportingTsExtensions": false,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/integrations/supabase/client": ["./src/test-stubs/supabaseClient.ts"],
      "@/hooks/useAuth": ["./src/test-stubs/useAuth.ts"],
      "@/utils/pdfGenerator": ["./src/test-stubs/pdfGenerator.ts"],
      "@/assets/*": ["./src/test-stubs/assets/*"],
      "@/components/*": ["./src/test-stubs/components/*"],
      "@/utils/formatProposalNumber": ["./src/utils/formatProposalNumber.ts"],
      "@/*": ["./src/*"]
    },
    "lib": ["ES2020", "DOM"],
    "strict": false,
    "noImplicitAny": false
  },
  "include": [
    "src/integrations/supabase/legacySession.ts",
    "src/integrations/supabase/legacySession.test.ts",
    "src/utils/formatProposalNumber.ts",
    "src/utils/formatProposalNumber.test.ts",
    "src/utils/pdfGenerator.ts",
    "src/utils/pdfGeneratorHeader.test.ts",
    "src/utils/proposalFileName.ts",
    "src/utils/proposalFileName.test.ts",
    "src/pages/NewProposal.tsx",
    "src/pages/__tests__/NewProposal.test.tsx",
    "src/test-stubs/**/*.ts",
    "src/types/**/*.d.ts",
    "backend/src/**/*.ts",
    "backend/tests/**/*.ts"
  ]
}
